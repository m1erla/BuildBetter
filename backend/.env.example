# Database Configuration
# PostgreSQL connection credentials
DB_USERNAME=
DB_PASSWORD=

# JPA/Hibernate Configuration
# Options: create, create-drop, update, validate, none
JPA_DDL_AUTO=update
SHOW_SQL=true

# JWT Security Configuration
# Generate a secure random string for production
JWT_SECRET_KEY=
# Token expiration in milliseconds (default: 24 hours)
JWT_EXPIRATION=86400000
# Refresh token expiration in milliseconds (default: 7 days)
JWT_REFRESH_EXPIRATION=604800000

# Email/SMTP Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# Stripe Payment Configuration
# Use test keys for development (sk_test_...) and live keys for production (sk_live_...)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# File Storage Configuration
INVOICE_STORAGE_PATH=invoices
FILE_UPLOAD_DIR=uploads

# Server Configuration
PORT=8080

# Application Configuration
APP_URL=https://buildbetter.com
SUPPORT_EMAIL=support@buildbetter.com

# SaaS Email Configuration
EMAIL_ENABLED=true
EMAIL_FROM=noreply@buildbetter.com
EMAIL_FROM_NAME=BuildBetter

# Logging Configuration
# Options: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
